<h2>'<%= params[:search] %>'</h2>                        
                            
<% if @tweets.empty? %>
<p>No results found.</p>
<% end %>

<div class="col-lg-6">
    <div class="row">
      <div class="col-lg-12">
      </div>
    </div>                        
    <div class="row">
      <div class="col-lg-12">
        <div id="feed" class="well feed">
          <%= render(@tweets) || "No Tweets" %>
        </div>
  <div class="col-lg-3">
    <div class="well">
    </div>
  </div>
</div>
<div class="panel-body">
 <h5 style="color: grey; font-size 125%;">Who to follow</h5>
 <% for @u in @tofollow do %>
 <p style="font-weight: bold; opacity: 0.85;" ><a href="/users/<%= @u.username %>"><%= @u.username %></a></p>
 <% end %>
 </div>