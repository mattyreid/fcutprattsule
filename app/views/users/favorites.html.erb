<div style="<%= user_cover(@user) %>" class="cover-pic">
</div>
<%= render 'user_nav', view_type: 'favorites' %>
<div class="row">
  <div class="col-lg-3">
    <%= render 'partials/user_info', view_type: 'profile', user: @user %>
  </div>
  <div class="col-lg-6">
    <div id="content">
      <div id="feed" class="well feed">
        <%= render(@favorites) || "No Capsules" %>
      </div>
      <div id="load-more">
        <%= render 'partials/load_more', items: @favorites %>
      </div>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="well">
      <div class="panel panel-default">
          <div class="panel-body">
            <h5 style="color: grey; font-size: 125%;">Trending Now</h5>
         <ul>
         <% @hashtags.each do |hashtag| %>
         <% if hashtag.hashtaggables.count > 3%>
         <li><%= link_to hashtag.name, hashtag_path(hashtag.name) %></li>
         <% end -%>
         <% end %>
         </ul>
    </div>
  </div>
  </div>
  </div>
  <div class="col-lg-3">
    <div class="well">
    <div class="panel-body">
    <h5 style="color: grey; font-size 125%;">Views</h5>
     <%= "#{@user.impressionist_count}" %>
  </div>
</div>
  <div class="col-lg-16">
    <div class="well">
    <div class="panel-body">
    <h5 style="color: grey; font-size 125%;">Top Users</h5>
 <% for @u in @tofollow do %>
 <p style="font-weight: bold; opacity: 0.85;" ><a href="/users/<%= @u.username %>"><%= @u.username %></a></p>
 <% end %>
  </div>
</div>
  