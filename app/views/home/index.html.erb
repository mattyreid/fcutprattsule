<div class="row">
  <div class="col-lg-3">
    <%= render 'partials/user_info', view_type: 'home', user: current_user %>
    <h5 style="color: grey; font-size 125%;">Top Users</h5>
 <% for @u in @tofollow do %>
 <p style="font-weight: bold; opacity: 0.85;" ><a href="/users/<%= @u.username %>"><%= @u.username %></a></p>
 <% end %>
  </div>
  <div class="col-lg-6">
    <div class="row">
      <div class="col-lg-12">
        <div class="well">
          <%= render 'partials/new_tweet', tweet_id: nil %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
    <div id="feed" class="well feed">
          <%= render(@tweets) || "No Posts" %>
    </div>
        <div id="load-more">
          <%= render 'partials/load_more', items: @tweets %>
        </div>
      </div>
    </div>
  </div>
    <div class="col-lg-3">
    <div class="well">
      <div class="panel-body">
 <h5 style="color: grey; font-size 125%;">Trending</h5>
 <ul>
         <% @hashtags.each do |hashtag| %>
         <% if hashtag.hashtaggables.count > 8%>
         </li><%= link_to hashtag.name, hashtag_path(hashtag.name) %><li>
         <h5 style="color: grey; font-size 125%;"><%= hashtag.hashtaggables.size %> Posts</h5>
         <% end -%>
         <% end %>
         </ul>
    </div>
  </div>
<div class="col-sm-9">
  <%= yield %>
</div>

<%= render_activities(@activities) %>
